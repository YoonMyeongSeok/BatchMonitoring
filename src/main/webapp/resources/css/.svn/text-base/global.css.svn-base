@CHARSET "UTF-8";
@import url("bootstrap.css");
@import url("bootstrap-responsive.css");

body,h1,h2,h3,h4,h5,h6,div,ul,li,a,fieldset,legend,form,label,input,button,span {
	margin: 0px;
	padding: 0px;
}

html {
	height: 100%;
}

/*HOME 화면*/
body {
	height: 100%;
	overflow: auto; 
	overflow-x: hidden; 
	overflow-y: auto;
	font-family: 굴림;
	color: black;
	background-color: #FFFFFF;
}

ul {
	list-style: none;
}

blockquote {
	border-left: 5px solid #333333;
}

textarea {
	width: 98%;
}

iframe {
	width: 98%;
}

#divHeader {
	position: relative;
}

/*배치모니터링 대제목 관련*/
#divTitle {
	float: left;
	margin-top: 40px;
	margin-bottom: 80px;
	margin-left: 60px;
}

#divInfoLogin {
	text-align: right;
	padding-top: 8px;
	padding-right: 8px;
}

/*divContents 관련*/
#divContents {
	clear: both;
	overflow: hidden;
	margin: 8px; 
	padding: 8px;
	border:0px solid #00ff00;
	background-color: #FFFFFF;
}

#divMessage {
	position: fixed;
	bottom: 0px;
	right: 0px;
}

.dialog>div, #divContents,
.rounded
 {
	padding: 0.5em;
	line-height: 1em;
	border-radius: 0.5em;
	-moz-border-radius: 0.5em;
	-webkit-border-radius: 0.5em;
}

.footer>span.copyright {
	float: right;
	margin-top: 20px;
	padding-right: 35px;
}

.dialog {
	min-width: 200px;
	min-height: 100px;
	position: absolute;
}
.dialog>.tb {
	height: 18px;
	background-color: #6666cc;
}
.dialog>.tb>h4 {
	display: inline;
}
.dialog>.tb>span {
	float: right;
}
.dialog>.tb>span>ul>li {
	float: left;
}
.dialog>.ct {
	height: 100%;
	overflow-x: hidden;
	background-color: #111111;
}
.dialog textarea, .dialog input {
	width: 90%;
}

.behind {
	display: none;
}

.tac {
	text-align: center;
}

.fl {
	float: left;
}

.fr {
	margin-top: 10px;
	margin-right: 10px;
	float: right;
}

.tile {
	float: left;
	padding: 10px;
	margin: 2px;
	font-size: 18px;
	font-weight: 200;
	line-height: 30px;
	color: black;
	background-color: #e9e9e9;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
}

.tile>p>a {
	float: right;
	margin: 2px;
}
	
.tile h1 {
  margin-bottom: 0;
  font-size: 60px;
  line-height: 1;
  letter-spacing: -1px;
  color: inherit;
}

.tile li {
  line-height: 30px;
}

.divTopbarCode select, .divTopbarCode input,
.divTopbarTagNote select, .divTopbarTagNote input,
.divTopbarActivity select, .divTopbarActivity input{
	margin-top: 10px;
	margin-left: 10px;
}